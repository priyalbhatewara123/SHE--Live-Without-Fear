<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".siren"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_margin="50dp"
        app:cardCornerRadius="20dp"
        android:elevation="10dp"
        android:layout_centerInParent="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:gravity="center">

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Press the play button below to play the siren."
            android:id="@+id/txt_view3"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            />

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/b5"
            android:background="@mipmap/play"
            android:onClick="play"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_view3"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Press the stop button below to stop the siren."
            android:id="@+id/txt_view4"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            />

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/b6"
            android:background="@mipmap/stop"
            android:onClick="stop"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_view4"
            android:layout_marginTop="30dp"
            />

    </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>